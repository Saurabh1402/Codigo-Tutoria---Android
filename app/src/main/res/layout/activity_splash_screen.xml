<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.massacre.codigotutoria.activity.SplashScreen"
    android:background="@color/colorPrimaryExtraDark"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:tint="@color/colorPrimaryLight"
        android:src="@drawable/ic_launcher_transparent"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:tint="@color/colorPrimaryLight"
        android:src="@drawable/coding_tutoria"/>

    <ImageView
        android:id="@+id/splash_screen_spinner"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:tint="@color/colorPrimaryLight"
        android:src="@drawable/spinner_circle"/>
</LinearLayout>
