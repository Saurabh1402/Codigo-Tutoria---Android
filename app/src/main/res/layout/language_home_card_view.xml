<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_home_card_view_height"
    android:paddingLeft="@dimen/card_view_padding_left"
    android:paddingRight="@dimen/padding_text_regular"
    android:paddingTop="@dimen/card_view_padding_top"
    android:paddingBottom="@dimen/card_view_padding_bottom"
    android:layout_margin="@dimen/margin_large"
    android:elevation="@dimen/elevation_large"
    android:translationZ="@dimen/transform_z"
    android:clickable="true"
    app:cardCornerRadius="@dimen/radius_regular"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:id="@+id/activity_home_card_view_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:foregroundTintMode="multiply"
        android:translationZ="2dp"

        >
        <ImageView
            android:layout_width="@dimen/activity_home_card_view_image"
            android:layout_height="@dimen/activity_home_card_view_image"
            android:layout_margin="@dimen/margin_regular"
            android:id="@+id/imageview_programminglanguage_image_home"
            android:scaleType="fitCenter"
            android:src="@drawable/language_default"
            android:maxWidth="112dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/margin_regular"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center"
            android:id="@+id/textview_programminglanguage_title_home"
            android:textSize="@dimen/header_font"
            />
        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:visibility="gone"
            android:id="@+id/texview_programminglanguage_id_home"/>
    </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>